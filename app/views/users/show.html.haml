%h2= t '.info'
- user_view_object = UserViewObject.new(UserDecorator.new(@user))
= ui_card do
  %p
    %b= user_view_object.translate(:first_name)
    = @user.first_name
  %p
    %b= user_view_object.translate(:last_name)
    = @user.last_name
  %p
    %b= user_view_object.translate(:email)
    = @user.email
  %p
    %b= user_view_object.translate(:role)
    = ui_badge @user.role, status: user_view_object.status
%br
= ui_row do
  = ui_col do
    %h2= t '.confirmation'
    = ui_card do
      %p
        %b= user_view_object.translate(:confirmed_at)
        = @user.confirmed_at
      %p
        %b= user_view_object.translate(:confirmation_sent_at)
        = @user.confirmation_sent_at
  = ui_col do
    %h2= t '.invitation'
    = ui_card do
      %p
        %b= user_view_object.translate(:invitation_created_at)
        = @user.invitation_created_at
      %p
        %b= user_view_object.translate(:invitation_sent_at)
        = @user.invitation_sent_at
      %p
        %b= user_view_object.translate(:invitation_accepted_at)
        = @user.invitation_accepted_at
      %p
        %b= user_view_object.translate(:invitation_limit)
        = @user.invitation_limit
      %p
        %b= user_view_object.translate(:invited_by_type)
        = @user.invited_by_type
      %p
        %b= user_view_object.translate(:invited_by_id)
        = @user.invited_by_id
      %p
        %b= user_view_object.translate(:invitations_count)
        = @user.invitations_count

= link_to 'Edit', edit_user_path(@user)
\|
= link_to 'Back', users_path
