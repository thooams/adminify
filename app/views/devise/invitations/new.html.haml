%h2= t('devise.invitations.new.header')

= simple_form_for(resource, as: resource_name, url: user_invitation_path, html: { method: :post }) do |f|
  - resource.class.invite_key_fields.each do |field|
    .form-inputs
      = f.input field
      = f.input :role, collection: User::ROLES, include_blank: false

  .form-actions
    = f.button :submit, t("devise.invitations.new.submit_button"), class: "btn btn-primary"
